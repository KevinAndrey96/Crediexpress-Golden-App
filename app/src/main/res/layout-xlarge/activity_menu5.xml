<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000">


    <Button

        android:layout_width="150dp"
        android:layout_height="100dp"
        android:shape="oval"
        android:textSize="15dp"
        android:text="Mis\nDatos"
        android:id="@+id/btnMisDatos"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"

        android:background="@drawable/button2"

        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Ver\nRutas"
        android:id="@+id/btnVerRutas"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textSize="15dp"
        android:background="@drawable/button2"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/btnMisDatos"
        android:layout_alignLeft="@+id/btnMisDatos"
        android:layout_alignStart="@+id/btnMisDatos" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="A침adir\ncredito"
        android:id="@+id/btnpago"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textSize="15dp"
        android:background="@drawable/button2"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/btnVerRutas"
        android:layout_alignStart="@+id/btnVerRutas" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="          Cerrar Sesi칩n"
        android:id="@+id/btnCerrarSesion"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textSize="25dp"
        android:background="@drawable/button1"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/btnOtrosGastos"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="A침adir\npago"
        android:id="@+id/btnNewCredito"
        android:textSize="15dp"
        android:background="@drawable/button2"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnpago"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/btnpago" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="A침adir\ncliente"
        android:id="@+id/btnNewCliente"
        android:background="@drawable/button2"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/btnVerRutas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Mis\nClientes"
        android:id="@+id/btnMisClientes"
        android:background="@drawable/button2"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/btnVerRutas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Otros\nGastos"
        android:id="@+id/btnOtrosGastos"
        android:background="@drawable/button2"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_below="@+id/btnpago"
        android:layout_alignLeft="@+id/btnpago"
        android:layout_alignStart="@+id/btnpago" />
<!--
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Recordatorio"
        android:id="@+id/btnRecordatorio"
        android:background="@drawable/button2"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnOtrosGastos"
        android:layout_alignStart="@+id/btnOtrosGastos" />
-->
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Grupos"
        android:textSize="15dp"
        android:id="@+id/btnGrupos"
        android:background="@drawable/button2"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btnOtrosGastos"
        android:layout_alignLeft="@+id/btnNewCredito"
        android:layout_alignStart="@+id/btnNewCredito" />
</RelativeLayout>